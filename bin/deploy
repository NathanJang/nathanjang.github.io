#!/usr/bin/env bash

CURRENT_BRANCH="$(git rev-parse --abbrev-ref HEAD)"
COMMIT_MESSAGE="Deploy gh-pages from commit $(git rev-parse HEAD)"
git push -q origin "$CURRENT_BRANCH"
git checkout -q master &&
git rm -q . &&
git commit -qm "TEMP: Prune" &&
git checkout -q "$CURRENT_BRANCH" &&
ember github-pages:commit --message "TEMP: $COMMIT_MESSAGE" --branch "master" > /dev/null &&
# Squash them
git checkout -q master &&
git reset -q --soft "HEAD~2" &&
git commit --allow-empty -qm "$COMMIT_MESSAGE" &&
git push -q origin master &&
git checkout -q "$CURRENT_BRANCH" &&
echo "Deploy succeeded."
